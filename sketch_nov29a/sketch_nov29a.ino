int speed = 0;
float battery = 0;
float power = 0;

void loop() {
  display.clearDisplay();
  if (speed > 50) {
    speed = 0;
  }

  if (battery > 100) {
    battery = 0;
  }

  if (power > 100) {
    power = 0;
  }

  drawSpeed(speed++);
  drawSpeedUnit();
  drawBattery(battery++ / 100);
  drawPower(power++ / 100);

  display.display();

  delay(40);
}

void drawSpeed(int speed) {
  display.setTextSize(3.8);             // Normal 1:1 pixel scale
  display.setTextColor(SSD1306_WHITE);        // Draw white text
  display.setCursor(SPEED_X_OFFSET,SPEED_Y_OFFSET);             // Start at top-left corner
  display.println(String(speed));
}

void drawSpeedUnit() {
  display.setTextSize(1.3);             // Normal 1:1 pixel scale
  display.setTextColor(SSD1306_WHITE);        // Draw white text
  display.setCursor(37 + SPEED_X_OFFSET,14 + SPEED_Y_OFFSET);             // Start at top-left corner
  display.println(F("km/h"));
}

void drawPower(float powerPercent) {
    display.drawLine(0, display.height()-1, SCREEN_WIDTH * powerPercent, display.height()-1, SSD1306_WHITE);
    display.drawLine(0, display.height()-2, SCREEN_WIDTH * powerPercent, display.height()-2, SSD1306_WHITE);
}

void drawBattery(float batteryPercent) {
  display.drawRoundRect(70, 5, display.width() * 0.4 + 4, display.height() * 0.55 + 4, 2, SSD1306_WHITE);
  display.fillRoundRect(70 + display.width() * 0.4 + 4, (display.height() * 0.55 + 6) * 0.5, 2,
  10, 1, SSD1306_WHITE);


  display.fillRoundRect(72, 7, display.width() * 0.4 * batteryPercent, display.height() * 0.55, 2, SSD1306_INVERSE);
}

void drawLogo() {
  display.clearDisplay();

  display.drawBitmap((display.width()  - LOGO_WIDTH ) / 2, (display.height() - LOGO_HEIGHT) / 2,
    logo, LOGO_WIDTH, LOGO_HEIGHT, 1);
  display.display();
  delay(5000);
}
